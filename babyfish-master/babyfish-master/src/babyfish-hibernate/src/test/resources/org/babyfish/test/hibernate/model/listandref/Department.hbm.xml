<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.babyfish.test.hibernate.model.listandref" auto-import="false">

    <class name="Department" table="lr_DEPARTMENT">
        <id name="id" column="DEPARTMENT_ID" type="long">
            <generator class="sequence">
                <param name="sequence">DEPARTMENT_ID_SEQ</param>
            </generator>
        </id>
        <property name="name" column="NAME" type="string" length="50" not-null="true"/>
        <list name="employees"
        inverse="false" 
        lazy="true">
            <key column="DEPARTMENT_ID"/>
            <list-index column="INDEX_IN_DEPARTMENT"/>
            <one-to-many class="Employee"/>
        </list>
    </class>

</hibernate-mapping>
